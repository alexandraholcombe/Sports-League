
@model SportsLeague.Models.Team

@{
    ViewData["Title"] = "Team - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit</h2>
<hr />
<h4>Edit this Team: @Html.DisplayFor(model => model.TeamName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TeamId)

    <div class="form-group">
        @Html.LabelFor(model => model.TeamName)
        @Html.EditorFor(model => model.TeamName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.City)
        @Html.EditorFor(model => model.City)
    </div>

    <div class="form-group">
        @Html.DropDownList("DivisionId")
    </div>

    <input type="submit" value="Save" class="btn btn-default" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>