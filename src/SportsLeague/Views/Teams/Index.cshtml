@model IEnumerable<SportsLeague.Models.Team>

@{
    ViewData["Title"] = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Division.DivisionName)
        </th>
        <th></th>
    </tr>

    @foreach (var listTeam in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelTeam => listTeam.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelTeam => listTeam.Division.DivisionName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listTeam.TeamId }) |
                @Html.ActionLink("Details", "Details", new { id = listTeam.TeamId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listTeam.TeamId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>